  "description": "",
  "main": "index.js",
  "repository": {},
  "keywords": [],
  "author": "Nagata Hiroaki",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.6",
    "cpx": "^1.5.0",
    "del-cli": "^1.1.0",
    "imagemin": "^6.0.0",
    "imagemin-gifsicle": "^5.2.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "pug-cli": "git+https://github.com/pugjs/pug-cli.git#0eb8d37",
    "webpack": "^4.16.3",
    "webpack-command": "^0.4.1"
  },
  "dependencies": {},
  "scripts": {
    "clean": "del-cli ./mock",
    "server": "browser-sync start --config bs-config.js",
    "build": "npm-run-all -s clean copy webpack css autoprefixer image pug",
    "watch": "npm-run-all -p w:copy w:webpack w:css w:autoprefixer w:pug w:image server",
    "start": "npm-run-all -s build watch",
    "pug": "pug -b src/mock/ -P -o ./mock/ src/mock/ ",
    "w:pug": "pug -b src/mock/ -P -w -o ./mock/ src/mock/ ",
    "css": "node-sass --include-path scss src/scss/app.scss src/scss/_app.css --output-style expanded --indent-type space",
    "w:css": "node-sass -w --include-path scss src/scss/app.scss src/scss/_app.css --output-style expanded --indent-type space",
    "autoprefixer": "postcss -o mock/common/css/app.css src/scss/_app.css",
    "w:autoprefixer": "postcss -o mock/common/css/app.css src/scss/_app.css -w",
    "webpack": "webpack --mode development",
    "w:webpack": "webpack -w --mode development",
    "copy": "cpx \"./src/mock/**/*.{js,eot,otf,woff,woff2}\" ./mock",
    "w:copy": "cpx \"./src/mock/**/*.{js,eot,otf,woff,woff2}\" ./mock -w",
    "image": "node imagemin.js",
    "w:image": "onchange \"./src/**/*.{,gif,svg,png,jpg}\" -- npm run image {{changed}}",

    "wp:copy": "cpx \"./mock/**/*.*\" ./wordpress",
    "wp:build": "npm-run-all -s build wp:copy"
  }
}